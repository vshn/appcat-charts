{
  "extends": [
    "config:base",
    ":gitSignOff",
    ":disableDependencyDashboard"
  ],
  "bumpVersion": "minor",
  "helm-values": {
    "fileMatch": ["(^|/)values\\.yaml$"]
  },
  "packageRules": [
    {
      "packagePatterns": ["^k8s.io", "^sigs.k8s.io"],
      "enabled": false
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "labels": [
    "dependency"
  ],
  "prBodyNotes": [
    "- [ ] PR contains the label that identifies the chart, e.g. `chart/<chart-name>`"
  ]
}
